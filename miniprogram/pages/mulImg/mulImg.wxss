/* miniprogram/pages/mulImg/mulImg.wxss */
.tag {
  display: flex;
  margin-left: 1%;
  width: 98%;
  height: 70rpx;
  color: rgb(80, 80, 80);
  flex-direction: row;
  background-color: rgba(26, 69, 110, 0.397);
}
.button {
  height: 70rpx;
  line-height: 70rpx;
  flex-grow: 1;
  margin: 0rpx 1rpx;
  background-color: #f6f6f6;
  color: rgba(0, 42, 82, 0.603);
  border-radius: 0;
  font-size: 13px;
}
.button::after {
  border: 0;
  border-radius: 0;
}

.chk_button {
  height: 70rpx;
  line-height: 70rpx;
  flex-grow: 1;
  margin: 0rpx 1rpx;
  background-color: #f6f6f6;
  color: rgb(8, 43, 77);
  border-radius: 0;
  font-size: 15px;
  text-shadow: 3px 3px 5px rgba(0, 41, 80, 0.281);
}
.chk_button::after {
  border: 0;
  border-radius: 0;
}


.imageview {
  display:flex; 
  justify-content: center;  
}
.imageview image {
  width: 98%; 
}